---
import BtnSkill from "./BtnSkill.astro";
---

<section class="flex flex-col md:flex-row md:p-5" id="skills">
  <div class="px-5 pb-10 mt-4 md:w-3/5 flex flex-col gap-4">
    <h2 class="text-3xl font-bold text-black text-center">Skills</h2>
    <div class="flex justify-center items-center">
      <h3
        class="text-white bg-gradient-to-tr from-[#04004f] to-black py-1 px-4 italic font-bold"
      >
        Web Development
      </h3>
    </div>
    <div class="flex flex-wrap gap-1 my-1 justify-center">
      <BtnSkill skill="HTML" id="html" />
      <BtnSkill skill="CSS" id="css" />
      <BtnSkill skill="Javascript" id="js" />
      <BtnSkill skill="Tailwind" id="tailwind" />
      <BtnSkill skill="Astro" id="astro" />
      <BtnSkill skill="Bootstrap" id="bootstrap" />
      <BtnSkill skill="WordPress" id="wordpress" />
      <BtnSkill skill="Git" id="git" />
    </div>

    <!-- Second Section -->
    <div class="flex justify-center items-center">
      <h3
        class="text-white bg-gradient-to-tr from-[#04004f] to-black py-1 italic font-bold px-4"
      >
        UI / UX Design
      </h3>
    </div>
    <div class="flex flex-wrap gap-1 my-1 justify-center">
      <BtnSkill skill="Adobe Photoshop" id="adobePS" />
      <BtnSkill skill="Adobe Illustrator" id="adobeAI" />
      <BtnSkill skill="Adobe XD" id="adobeXD" />
      <BtnSkill skill="Figma" id="figma" />
    </div>

    <div class="text-gray-400 p-4 text-center border-b border-[#c1c1c1]">
      <p>Click on a label to display its information in the container.</p>
    </div>
  </div>

  <div
    class="flex flex-col px-5 py-9 items-center justify-center text-center bg-gradient-to-tr from-[#04004f] to-black md:w-2/5 h-96 gap-7"
  >
    <h2 class="font-bold text-white text-xl" id="showTitle">
      Let's see the details...
    </h2>
    <p class="text-gray-300 text-center" id="showDescription">
      You can click on any skill to see the details of my learning experience
      with each one, including my proficiency level and what tools or
      technologies I use regularly.
    </p>
  </div>
</section>
<script src="./script/skills.js"></script>
